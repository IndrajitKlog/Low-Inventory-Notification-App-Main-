<p id="notice"><%= notice %></p>

<h1>Shop Settings</h1>

<table>
  <thead>
    <tr>
      <th>Admin email</th>
      <th>Inventory limit</th>
      <th>Email notification frequency</th>
      <th>Email subscription</th>
      <th>Inventory auto restock</th>
      <th>Shop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_settings.each do |shop_setting| %>
      <tr>
        <td><%= shop_setting.admin_email %></td>
        <td><%= shop_setting.inventory_limit %></td>
        <td><%= shop_setting.email_notification_frequency %></td>
        <td><%= shop_setting.email_subscription %></td>
        <td><%= shop_setting.inventory_auto_restock %></td>
        <td><%= shop_setting.shop_id %></td>
        <td><%= link_to 'Show', shop_setting %></td>
        <td><%= link_to 'Edit', edit_shop_setting_path(shop_setting) %></td>
        <td><%= link_to 'Destroy', shop_setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

