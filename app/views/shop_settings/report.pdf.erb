
<div class="container">
 	<div class="row">
 		<div class="col-sm-9">
			<div class="card">
				<div class="card-header">
					All Low Inventory Product
				</div>
				<div class="card-body">
			    	<h5 class="card-title"></h5>
			    	<table class="table table-hover">
					  <thead>
					    <tr>
					      <th scope="col">#</th>
					      <th scope="col">Product Name</th>
					      <th scope="col">Inventory Quantity</th>
					    </tr>
					  </thead>
					  <tbody>
					  <% @count = 0%>
					  <% @products.each do |product|%>
					  <% if product.variants[0].attributes[:"inventory_quantity"] < 5 %>
					    <tr>
					      <th scope="row"> <%= @count %></th>
					      <td><%= link_to "#{product.title}", "https://#{@shop_session.url}/admin/products/#{product.id}", target: "_top" %></td>
					      <td><%= product.variants[0].attributes[:"inventory_quantity"] %></td>
					      <% @count = @count + 1 %>
					      <% end %>
					    </tr>
					    <% end %>
					  </tbody>
					</table>
			    	<a href="#" class="btn btn-primary">Go somewhere</a>
			    	
			  </div>
			</div>
		</div>
	</div>
</div>