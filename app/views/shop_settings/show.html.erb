<div class="container">
  <div class="row">
    <div class="col-sm-9">
          
      </div>
      <div class="col-sm-3">
          <%= link_to "Setting", shop_setting_path(@shop.shop_setting.id) %> |
          <%= link_to "Report", shop_settings_report_path %> |
          <%= link_to "Plan", shop_settings_display_path %>
      </div>
  </div>
  <div class="card">
    <div class="card-header">
      Admin Settings
    </div>
    <div class="card-body">
    <h5 class="card-title"></h5>
      <div class="row">
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Settings <p id="notice"><%= notice %></p></h5>
              <p class="card-text">
                <strong>Admin email:</strong>
                <%= @shop_setting.admin_email %></br>
                <strong>Inventory limit:</strong>
                <%= @shop_setting.inventory_limit %></br>
                <strong>Email notification frequency:</strong>
                <%= @shop_setting.email_notification_frequency %></br>
                <strong>Email subscription:</strong>
                <%= @shop_setting.email_subscription %></br>
                <strong>Inventory auto restock:</strong>
                <%= @shop_setting.inventory_auto_restock %></br>
              </p>
              <%= link_to 'Edit', edit_shop_setting_path(@shop_setting), :class => "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Your Current Plan</h5>
              <p class="card-text">
               <strong> Global Inventory Warning Level</strong></br>
                <strong> Email Notification Frequency</strong></br>
                <strong> Export Low Stock Products PDF </strong></br>
                <strong> Change Inventory from Email </strong></br>
                <strong> Add Multiple Email Addresses for Alerts </strong></br>
              </p>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


